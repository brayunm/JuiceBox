{
  "manifest_version": 3,
  "name": "JuiceBox",
  "version": "0.0.1",
  "description": "Analyze your charging distribution with a month by month and an accumulated views.",
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "overview.html",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*.shellrecharge.com/*"],
      "js": ["network-observer.js"]
    }
  ],
  "permissions": [
    "storage",
    "tabs",
    "notifications"
  ],
  "host_permissions": [
    "*://*.shellrecharge.com/*"
  ],
  "icons": {
    "16": "public/16.png",
    "32": "public/32.png",
    "48": "public/48.png",
    "192": "public/192.png"
  }
}
